{
  "name": "my-todos",
  "displayName": "My Todos - Real-time TODO Manager",
  "description": "Smart TODO management with real-time synchronization, CodeLens integration, and advanced filtering. Automatically detects and syncs TODO comments as you type!",
  "version": "1.2.0",
  "publisher": "JakubKozera",
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "views": {
      "todoContainer": [
        {
          "id": "todoView",
          "name": "My Todos",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoContainer",
          "title": "My Todos",
          "icon": "$(checklist)"
        }
      ]
    },
    "commands": [
      {
        "command": "my-todos.refreshTodos",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "my-todos.addTodo",
        "title": "Add Todo",
        "icon": "$(add)"
      },
      {
        "command": "my-todos.refreshCodeTodos",
        "title": "Refresh Code TODOs",
        "icon": "$(sync)"
      },
      {
        "command": "myTodos.showTodosView",
        "title": "Show Todos View"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "my-todos.refreshTodos",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "my-todos.addTodo",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "my-todos.refreshCodeTodos",
          "when": "view == todoView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "My Todos",
      "properties": {
        "my-todos.scanMode": {
          "type": "string",
          "enum": [
            "off",
            "onSave",
            "activeScan"
          ],
          "enumDescriptions": [
            "Manual refresh only - no automatic TODO detection",
            "Scan for TODOs only when files are saved",
            "Real-time scanning - detects TODOs as you type (may impact performance)"
          ],
          "default": "activeScan",
          "description": "Controls when the extension scans for TODO comments in your code",
          "markdownDescription": "Controls when the extension scans for TODO comments in your code:\n\n- **Off**: Manual refresh only\n- **On Save**: Scan only when files are saved\n- **Active Scan**: Real-time scanning as you type"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/assert": "^1.5.11",
    "eslint": "^9.23.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "mocha": "^11.1.0",
    "typescript": "^5.8.2",
    "@vscode/test-web": "^0.0.68",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@types/webpack-env": "^1.18.8",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  }
}
