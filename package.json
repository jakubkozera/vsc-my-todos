{
  "name": "my-todos",
  "displayName": "my-todos",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "browser": "./dist/web/extension.js",
  "contributes": {
    "views": {
      "todoContainer": [
        {
          "id": "todoView",
          "name": "My Todos",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoContainer",
          "title": "My Todos",
          "icon": "$(checklist)"
        }
      ]
    },
    "commands": [
      {
        "command": "my-todos.refreshTodos",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "my-todos.addTodo",
        "title": "Add Todo",
        "icon": "$(add)"
      },
      {
        "command": "my-todos.refreshCodeTodos",
        "title": "Refresh Code TODOs",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "my-todos.refreshTodos",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "my-todos.addTodo",
          "when": "view == todoView",
          "group": "navigation"
        },
        {
          "command": "my-todos.refreshCodeTodos",
          "when": "view == todoView",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "test": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. --extensionTestsPath=dist/web/test/suite/index.js",
    "pretest": "npm run compile-web",
    "vscode:prepublish": "npm run package-web",
    "compile-web": "webpack",
    "watch-web": "webpack --watch",
    "package-web": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src",
    "run-in-browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/assert": "^1.5.11",
    "eslint": "^9.23.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "mocha": "^11.1.0",
    "typescript": "^5.8.2",
    "@vscode/test-web": "^0.0.68",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@types/webpack-env": "^1.18.8",
    "assert": "^2.1.0",
    "process": "^0.11.10"
  }
}
